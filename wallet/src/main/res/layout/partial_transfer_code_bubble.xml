<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clipToPadding="false"
	android:paddingTop="@dimen/spacing_medium_large">

	<View
		android:id="@+id/background"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:background="@drawable/bg_certificate_bubble"
		android:backgroundTint="@color/blueish"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<FrameLayout
		android:id="@+id/transfer_code_icon_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/circle_white"
		android:padding="@dimen/spacing_very_small"
		app:layout_constraintBottom_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/certificate_page_status_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/ic_info_outline"
			app:tint="@color/blue" />

		<ProgressBar
			android:id="@+id/certificate_page_status_loading"
			android:layout_width="26dp"
			android:layout_height="26dp"
			android:visibility="gone" />
	</FrameLayout>

	<androidx.constraintlayout.widget.Group
		android:id="@+id/transfer_code_fields"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		app:constraint_referenced_ids="transfer_code_title,transfer_code_section_1,transfer_code_section_2,transfer_code_section_3"
		tools:visibility="visible" />

	<TextView
		android:id="@+id/transfer_code_title"
		style="@style/CovidCertificate.Text.Bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_very_small"
		android:text="@string/wallet_transfer_code_title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/transfer_code_icon_container" />

	<TextView
		android:id="@+id/transfer_code_section_1"
		style="@style/CovidCertificate.Text.Bold.Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/spacing_tiny_small"
		android:layout_marginTop="@dimen/spacing_medium_large"
		android:background="@color/white"
		android:fontFeatureSettings="tnum"
		android:paddingHorizontal="@dimen/spacing_very_small"
		android:textAllCaps="true"
		android:textColor="@color/blue"
		app:layout_constraintEnd_toStartOf="@+id/transfer_code_section_2"
		app:layout_constraintHorizontal_chainStyle="packed"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/transfer_code_title"
		tools:text="A2X" />

	<TextView
		android:id="@+id/transfer_code_section_2"
		style="@style/CovidCertificate.Text.Bold.Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/spacing_tiny_small"
		android:background="@color/white"
		android:fontFeatureSettings="tnum"
		android:paddingHorizontal="@dimen/spacing_very_small"
		android:textAllCaps="true"
		android:textColor="@color/blue"
		app:layout_constraintBottom_toBottomOf="@+id/transfer_code_section_1"
		app:layout_constraintEnd_toStartOf="@+id/transfer_code_section_3"
		app:layout_constraintStart_toEndOf="@+id/transfer_code_section_1"
		app:layout_constraintTop_toTopOf="@+id/transfer_code_section_1"
		tools:text="56K" />

	<TextView
		android:id="@+id/transfer_code_section_3"
		style="@style/CovidCertificate.Text.Bold.Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/spacing_tiny_small"
		android:background="@color/white"
		android:fontFeatureSettings="tnum"
		android:paddingHorizontal="@dimen/spacing_very_small"
		android:textAllCaps="true"
		android:textColor="@color/blue"
		app:layout_constraintBottom_toBottomOf="@+id/transfer_code_section_1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/transfer_code_section_2"
		app:layout_constraintTop_toTopOf="@+id/transfer_code_section_1"
		tools:text="7WP" />

	<TextView
		android:id="@+id/transfer_code_expired"
		style="@style/CovidCertificate.Text.Bold.Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_very_small"
		android:text="@string/wallet_transfer_code_old_code"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/transfer_code_icon_container"
		tools:visibility="gone" />

	<androidx.constraintlayout.widget.Barrier
		android:id="@+id/transfer_code_state_barrier"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:barrierDirection="bottom"
		app:constraint_referenced_ids="transfer_code_section_1,transfer_code_expired" />

	<TextView
		android:id="@+id/transfer_code_creation_datetime"
		style="@style/CovidCertificate.Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginVertical="@dimen/spacing_medium_large"
		android:breakStrategy="high_quality"
		android:hyphenationFrequency="full"
		app:layout_constrainedWidth="true"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/transfer_code_state_barrier"
		tools:text="@string/wallet_transfer_code_createdat" />

</androidx.constraintlayout.widget.ConstraintLayout>