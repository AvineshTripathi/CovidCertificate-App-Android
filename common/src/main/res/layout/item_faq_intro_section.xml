<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="@dimen/spacing_very_large"
	android:layout_marginVertical="@dimen/spacing_medium_large"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/faq_intro_section_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:src="@drawable/ic_one" />

	<TextView
		android:id="@+id/faq_intro_section_text"
		style="@style/CovidCertificate.Text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/spacing_large"
		tools:text="@tools:sample/lorem/random" />

</LinearLayout>